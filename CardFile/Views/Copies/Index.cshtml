@model IEnumerable<CardFile.Models.Copy>

@{
    ViewBag.Title = "Выданные книги";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Выданные книги</h2>

<p>
    @Html.ActionLink("Выдать книгу", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Book.BookTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.User.FullName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BegDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EndDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book.BookTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BegDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.CopyId }) |
                @Html.ActionLink("Details", "Details", new { id = item.CopyId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.CopyId })
            </td>
        </tr>
    }

</table>
